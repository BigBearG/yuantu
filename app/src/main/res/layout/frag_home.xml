<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#152c3a"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        >
        <ImageView
            android:id="@+id/home_monitor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@mipmap/monitor"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/home_paraset"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@mipmap/para_set"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/home_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@mipmap/history"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>